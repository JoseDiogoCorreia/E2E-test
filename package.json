    "dotenv": "^16.5.0",
    "jszip": "^3.10.1",
    "playwright": "^1.51.1",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "typescript": "^5.8.3"
  }
