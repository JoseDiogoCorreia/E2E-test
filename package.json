{
  "name": "e2e-tests",
  "description": "",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "postinstall": "npx playwright install",
    "start": "cucumber-js test",
    "test": "cucumber-js test",
    "test:@only": "cucumber-js --profile only",
    "test:debug": "cucumber-js --debug",
    "lint": "eslint src --ext=ts,d.ts --max-warnings=0 --cache=true --cache-location=out/.eslintcache",
    "lint:w": "nodemon --watch src --ext ts --delay 50ms --exec \"npm run lint -- --fix\"",
    "lint:ci": "npm run lint -- -f html -o out/lint/index.html && npm run lint -- -f json -o out/lint/result.json",
    "bundle": "node ./bundle.js"
  },
